class Solution {
    public int maximumBags(int[] c, int[] r, int add) {
        int n=r.length;
        int c1=0;
        for(int i=0;i<n;i++){
            r[i]=c[i]-r[i];
        }
        Arrays.sort(r);
        for(int i=0;i<n&&(r[i]-add)<=0;i++){
            c1++;
            add-=r[i];
        }
        return c1;
    }
}
